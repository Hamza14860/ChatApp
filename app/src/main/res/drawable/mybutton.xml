<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#0444bf" />
            <gradient android:angle="-90" android:startColor="#0584f2" android:endColor="#66a5ad"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#0584f2" />
            <solid android:color="#0aaff1"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#07575b" />
            <gradient android:angle="-90" android:startColor="#0444bf" android:endColor="#0584f2" />
        </shape>
    </item>
</selector>